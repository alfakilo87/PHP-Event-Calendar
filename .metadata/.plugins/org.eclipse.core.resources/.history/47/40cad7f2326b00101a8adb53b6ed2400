<?php

class config
{
	var $jan = 'Jaanuar';
	var $feb = 'Veebruar';
	var $mar = 'Märts';
	var $apr = 'Aprill';
	var $may = 'Mai';
	var $jun = 'Juuni';
	var $jul = 'Juuli';
	var $aug = 'August';
	var $sep = 'September';
	var $oct = 'Oktoober';
	var $nov = 'November';
	var $dec = 'Detsember';
	
	var $mon = 'Esmaspäev';
	var $tue = 'Teisipäev';
	var $wed = 'Kolmapäev';
	var $thu = 'Neljapäev';
	var $fri = 'Reede';
	var $sat = 'Laupäev';
	var $sun = 'Pühapäev';
	
	var $startonsunday = false;
	
	var $showweeknumber = true;
	
	function getDays()
	{
		$days[7] = array();
		
		if ($this->startonsunday)
		{
			array_push($days, $this->sun);
		}
		array_push($days, $this->mon);
		array_push($days, $this->tue);
		array_push($days, $this->wed);
		array_push($days, $this->thu);
		array_push($days, $this->fri);
		array_push($days, $this->sat);
		if ($this->startonsunday === false)
		{
			array_push($days, $this->sun);
		}
		
		return $days;
	}
	
	function getMonths()
	{
		$days[7] = array();
		
		if ($this->startonsunday)
		{
			array_push($days, $this->sun);
		}
		array_push($days, $this->mon);
		array_push($days, $this->tue);
		array_push($days, $this->wed);
		array_push($days, $this->thu);
		array_push($days, $this->fri);
		array_push($days, $this->sat);
		if ($this->startonsunday === false)
		{
			array_push($days, $this->sun);
		}
		
		return $days;
	}
}

?>
